<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bubblespace</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/simple-sidebar.css")
    @Styles.Render("~/Content/perfect-scrollbar.css")
    @Scripts.Render("~/bundles/modernizr")
    
    <link href='http://fonts.googleapis.com/css?family=Lato:400,700&subset=latin,latin-ext' rel='stylesheet' type='text/css'>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top frontPageTop>
        <div class=" container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("(B)", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">            
            @Html.Partial("_LoginPartial")
        </div>
    </div>
    </div>
    <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
            <li><img src="@Url.Content("~/Content/Assets/friends.png")" class="nav-image"></li>
            <li><img src="@Url.Content("~/Content/Assets/placeholder.png")" class="nav-image"></li>
            <li><img src="@Url.Content("~/Content/Assets/events.png")" class="nav-image"></li>
            <li><img src="@Url.Content("~/Content/Assets/chat.png")" class="nav-image"></li>    
            <li><img src="@Url.Content("~/Content/Assets/settings.png")" class="nav-image setting-icon"></li>        
        </ul>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Bubblespace</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/perfect-scrollbar.jquery.js")
    @Scripts.Render("~/Scripts/perfect-scrollbar.js")
    @Scripts.Render("~/Scripts/ajax.js")
    @Scripts.Render("~/Scripts/scrollbar.js")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>