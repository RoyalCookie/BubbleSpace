@model IEnumerable<posts>
    @{
        Layout = "~/Views/Shared/_LayoutMain.cshtml";
    }
    <div class="container-fluid">
        <div class="row">
            <div id="list-view" class="col-xs-3">
                <ul id="list-view-items"></ul>
            </div>
            <div class="row">
                <div id="new-post" class="col-xs-8">
                    <div>
                        <form action="/Post/Create" method="post">
                            <textarea name="content_text" id="post-content" rows="3" cols="40"></textarea><br />
                            <input type="submit" value="Post" />
                            <input id="upload-button" type="file" name="content_image" accept="image/*">
                        </form>
                    </div>
                </div>
                <div id="main-view" class="col-xs-8">
                    <ul></ul>
                </div>
            </div>
        </div>
    </div>
